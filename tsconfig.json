{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@settings": ["src/settings/index"],
      "@errors": ["src/game/errors/index"],
      "@logger": ["src/game/logger/index"],
      "@engines": ["src/game/engines/index"],
      "@handler": ["src/game/handlers/index"],
      "@components": ["src/game/components/index"],
    }
  },
}
