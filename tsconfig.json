{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@byte-eight-engine/engines": ["src/ByteEightEngine/engines/index"],
      "@byte-eight-engine/gears": ["src/ByteEightEngine/gears/index"],
      "@byte-eight-engine/errors": ["src/ByteEightEngine/errors/index"],
      "@byte-eight-engine/logger": ["src/ByteEightEngine/logger/index"],
      "@game/settings": ["src/game/settings/index"],
    }
  },
}
