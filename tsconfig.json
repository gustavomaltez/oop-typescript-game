{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@engines/*": ["src/game/engines/*"],
      "@errors/*": ["src/game/errors/*"],
      "@handlers/*": ["src/game/handlers/*"],
      "@logger/*": ["src/game/logger/*"],
    }
  },
}
